<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:LibreSolvE.GUI.ViewModels"
    x:DataType="vm:IntegralTableViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="LibreSolvE.GUI.Views.IntegralTableView">

    <!-- Use a Grid instead of DockPanel -->
    <Grid RowDefinitions="Auto, *" Background="White">
        <!-- Row 0: Header -->
        <TextBlock Grid.Row="0"
            Text="{Binding RowCount, StringFormat='Integral Table: {0} rows'}"
            Margin="5"
            FontWeight="Bold"
            FontSize="14" />

        <!-- Row 1: DataGrid (Takes remaining space) -->
        <DataGrid Grid.Row="1"
            Name="IntegralTableGrid"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            GridLinesVisibility="All"
            BorderThickness="1"
            BorderBrush="Gray"
            Margin="5" />
        <!-- Removed Width/Height, let Grid handle it -->

    </Grid>

</UserControl>
