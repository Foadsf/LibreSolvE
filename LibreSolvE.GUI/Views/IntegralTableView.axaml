<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:LibreSolvE.GUI.ViewModels"
    x:DataType="vm:IntegralTableViewModel"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="LibreSolvE.GUI.Views.IntegralTableView">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top"
            Text="{Binding RowCount, StringFormat='Integral Table: {0} rows'}"
            Margin="5"
            FontWeight="Bold" />

        <!-- DataGrid MUST have the correct Name -->
        <DataGrid Name="IntegralTableGrid"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            Margin="5" />
        <!-- ItemsSource is set in code-behind -->
    </DockPanel>
</UserControl>
